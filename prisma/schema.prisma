generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model roles {
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(40)
  usuarios usuarios[] // Campo opuesto a `rol` en `usuarios`
}


model usuarios {
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(40)
  correo String @db.VarChar(40)
  contrasena String@db.VarChar(40)
  fechaCreacion DateTime @default(now())
  activo Boolean
  rol_id Int
  rol roles @relation(fields: [rol_id], references: [id])
  categorias  categorias[] // Campo opuesto a `usuario` en `categorias`
}


model categorias{
  id Int @id @default(autoincrement())
  nombre String @db.VarChar(40)
  esPredeterminada Boolean
  tipoPredeterminada String@db.VarChar(40)
  fechaCreacion DateTime @default(now())
  activo Boolean
  usuario_Id Int
  usuario usuarios @relation(fields: [usuario_Id], references: [id])
  }


